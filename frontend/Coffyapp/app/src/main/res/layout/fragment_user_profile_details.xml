<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/background_color">

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginTop="32dp"
        android:layout_marginEnd="16dp"
        app:cardCornerRadius="16dp"
        app:cardElevation="8dp"
        android:background="@drawable/custom_card_background"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="24dp">

            <TextView
                android:layout_width="wrap_content"
                android:fontFamily="@font/lato_regular"
                android:layout_height="wrap_content"
                android:layout_marginBottom="32dp"
                android:text="Profile Details"
                android:textColor="@color/orange"
                android:textSize="28sp"
                android:textStyle="bold"
                android:letterSpacing="0.05" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:background="@drawable/custom_input_background"
                android:padding="16dp"
                android:layout_marginBottom="16dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:fontFamily="@font/lato_regular"
                    android:layout_height="wrap_content"
                    android:text="Name"
                    android:textColor="#9E9E9E"
                    android:textSize="14sp"
                    android:letterSpacing="0.05" />

                <TextView
                    android:id="@+id/textViewName"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="4dp"
                    android:textColor="#212121"
                    android:textSize="18sp"
                    android:fontFamily="@font/lato_bold"
                    tools:text="John" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:background="@drawable/custom_input_background"
                android:padding="16dp"
                android:layout_marginBottom="16dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:fontFamily="@font/lato_regular"
                    android:layout_height="wrap_content"
                    android:text="Surname"
                    android:textColor="#9E9E9E"
                    android:textSize="14sp"
                    android:letterSpacing="0.05" />

                <TextView
                    android:id="@+id/textViewSurname"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="4dp"
                    android:textColor="#212121"
                    android:textSize="18sp"
                    android:fontFamily="@font/lato_bold"
                    tools:text="Doe" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:background="@drawable/custom_input_background"
                android:padding="16dp"
                android:layout_marginBottom="16dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:fontFamily="@font/lato_regular"
                    android:layout_height="wrap_content"
                    android:text="Email"
                    android:textColor="#9E9E9E"
                    android:textSize="14sp"
                    android:letterSpacing="0.05" />

                <TextView
                    android:id="@+id/textViewEmail"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="4dp"
                    android:textColor="#212121"
                    android:textSize="18sp"
                    android:fontFamily="@font/lato_bold"
                    tools:text="john.doe@example.com" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:background="@drawable/custom_input_background"
                android:padding="16dp"
                android:layout_marginBottom="16dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Phone"
                    android:fontFamily="@font/lato_regular"
                    android:textColor="#9E9E9E"
                    android:textSize="14sp"
                    android:letterSpacing="0.05" />

                <TextView
                    android:id="@+id/textViewPhone"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="4dp"
                    android:textColor="#212121"
                    android:textSize="18sp"
                    android:fontFamily="@font/lato_bold"
                    tools:text="+90 555 123 4567" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:background="@drawable/custom_input_background"
                android:padding="16dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Password"
                    android:textColor="#9E9E9E"
                    android:fontFamily="@font/lato_regular"
                    android:textSize="14sp"
                    android:letterSpacing="0.05" />

                <TextView
                    android:id="@+id/tvPassword"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="4dp"
                    android:text="••••••••"
                    android:textColor="#212121"
                    android:textSize="18sp"
                    android:textStyle="bold" />
            </LinearLayout>

        </LinearLayout>

    </androidx.cardview.widget.CardView>

    <com.google.android.material.floatingactionbutton.ExtendedFloatingActionButton
        android:id="@+id/buttonEditProfile"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="16dp"
        android:text="Edit Profile"
        android:fontFamily="@font/lato_regular"
        android:textColor="#FFFFFF"
        android:backgroundTint="@color/orange"
        app:icon="@android:drawable/ic_menu_edit"
        app:iconTint="#FFFFFF"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <com.google.android.material.floatingactionbutton.ExtendedFloatingActionButton
        android:id="@+id/buttonEditProfileUnique"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="16dp"
        android:text="Edit Unique"
        android:fontFamily="@font/lato_regular"
        android:textColor="#FFFFFF"
        android:backgroundTint="@color/DarkBlue"
        app:icon="@android:drawable/ic_menu_edit"
        app:iconTint="#FFFFFF"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@id/buttonEditProfile" />


</androidx.constraintlayout.widget.ConstraintLayout>