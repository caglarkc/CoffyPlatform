<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:background="@color/background_color"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:text="@string/shop_name"
        android:textColor="@color/import_text_color"
        android:fontFamily="@font/lato_bold"
        android:textSize="48sp"
        android:gravity="center|top"
        android:background="@color/orange"
        app:layout_constraintHeight_percent="0.2"
        app:layout_constraintTop_toTopOf="parent"/>


    <LinearLayout
        android:layout_width="match_parent"
        android:orientation="vertical"
        android:paddingTop="30dp"
        android:paddingEnd="15dp"
        android:paddingStart="15dp"
        android:paddingBottom="30dp"
        android:background="@drawable/white_border"
        android:layout_marginStart="15dp"
        android:layout_marginEnd="15dp"
        android:layout_marginTop="70dp"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="parent">

        <TextView
            android:layout_width="wrap_content"
            android:text="Üye Ol"
            android:textColor="@color/import_text_color"
            android:textSize="22sp"
            android:fontFamily="@font/lato_bold"
            android:layout_height="wrap_content"/>


        <TextView
            android:layout_width="wrap_content"
            android:layout_marginTop="10dp"
            android:text="Kaydı tamamlamana çok az kaldı, mailini onayla ve hemen ücretsiz ilk kahveni sipariş ver!"
            android:textColor="@color/import_text_color"
            android:textSize="16sp"
            android:fontFamily="@font/lato_regular"
            android:layout_height="wrap_content"/>


        <TextView
            android:layout_width="wrap_content"
            android:layout_marginStart="15dp"
            android:layout_marginTop="30dp"
            android:layout_marginEnd="15dp"
            android:text="Email"
            android:textColor="@color/import_text_color"
            android:textSize="18sp"
            android:fontFamily="@font/lato_bold"
            android:layout_height="wrap_content"/>

        <EditText
            android:layout_width="match_parent"
            android:inputType="textEmailAddress"
            android:id="@+id/editTextEmail"
            android:padding="20dp"
            android:paddingStart="30dp"
            android:hint="Email"
            android:textColor="@color/dark_text_color"
            android:textColorHint="@color/hint_color"
            android:background="@drawable/edit_text_border"
            android:layout_marginStart="15dp"
            android:layout_marginTop="10dp"
            android:layout_marginEnd="15dp"
            android:layout_height="wrap_content"/>



        <Button
            android:layout_width="match_parent"
            android:id="@+id/buttonConfirmEmail"
            android:layout_marginStart="15dp"
            android:layout_marginTop="20dp"
            android:text="Onaylama Kodunu Gönder"
            android:textColor="@color/dark_hint_color"
            android:textSize="18sp"
            android:fontFamily="@font/lato_regular"
            android:background="@drawable/empty_button_border"
            app:backgroundTint="@null"
            android:layout_marginEnd="15dp"
            android:layout_height="54dp"/>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_marginStart="15dp"
            android:layout_gravity="center_horizontal|fill_vertical"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/textViewDetail"
                android:layout_width="wrap_content"
                android:layout_height="50dp"
                android:gravity="center"
                android:text="Üye misin?"
                android:fontFamily="@font/lato_regular"
                android:textColor="@color/dark_hint_color"
                android:textSize="14sp" />

            <Button
                android:id="@+id/buttonLogin"
                android:textAllCaps="false"
                android:layout_width="wrap_content"
                android:layout_height="50dp"
                android:text="Giriş Yap"
                android:fontFamily="@font/lato_regular"
                android:textColor="@color/light_blue"
                android:gravity="center"
                android:paddingStart="0dp"
                android:background="@android:color/transparent"
                app:backgroundTint="@null" />

        </LinearLayout>





    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>